	<body>

		<div class="wrapper" style="background:linear-gradient(140deg, #a1acb7 0%, #3038e8 100%);">
			<div class="inner">

				<form action="/check" method="POST">
					<h3>Check Balance</h3>
					<div class="form-group">
						<div class="form-wrapper">
							<label for="">Account Id:</label>
							<div class="form-holder">
								<i class="zmdi zmdi-account-o"></i>
								<input type="text" name="accId" class="form-control">
							</div>
						</div>
						<div class="form-wrapper">
                            <label for="">Secret Key:</label>
							<div class="form-holder">
								<i class="zmdi zmdi-lock-outline"></i>
								<input type="password" name="secretKey" class="form-control" placeholder="********">
							</div>
						</div>
					</div>	
					<div class="form-end">
						<!-- <div class="checkbox">
							<label>
								<input type="checkbox"> By ticking,you are confirming that you have read,understood and agree to terms and conditions.
								<span class="checkmark"></span>
							</label>
						</div> -->
						<div class="button-holder">
							<button type="submit">Check</button>
						</div>
					</div>
					<!-- <h2 style="text-align: center;">Dont have an account!  <a href="/register">Register Now!</a></h2> -->
				</form>
			</div>
		</div>
		
